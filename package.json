{
  "name": "ts-rpg-engine",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @ts-rpg-engine/game",
    "build": "npm run build -w @ts-rpg-engine/domain && npm run build -w @ts-rpg-engine/game",
    "preview": "npm run preview -w @ts-rpg-engine/game",
    "playground": "npm run playground -w @ts-rpg-engine/domain",
    "test": "npm run test -w @ts-rpg-engine/domain",
    "test:ui": "npm run test:ui -w @ts-rpg-engine/domain",
    "typecheck": "npm run typecheck -w @ts-rpg-engine/domain && npm run typecheck -w @ts-rpg-engine/game",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@vitest/ui": "^3.0.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.0"
  }
}
